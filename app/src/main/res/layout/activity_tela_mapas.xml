<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/txtPesquisa"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btMais">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/cinza">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:importantForAccessibility="no" android:src="@drawable/mapa"
            android:id="@+id/btmapamapa"
            android:backgroundTint="@color/roxo">

        </ImageButton>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:importantForAccessibility="no" android:src="@drawable/denuncia"
            android:id="@+id/btdenunciasmapa"
            android:layout_marginTop="15dp"
            android:layout_marginStart="250dp">
        </ImageButton>
    </LinearLayout>


</LinearLayout>